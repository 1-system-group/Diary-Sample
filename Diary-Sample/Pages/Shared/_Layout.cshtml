<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/certificate.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom mb-3 p-0 certification_theme">
            <div class="container">
                <a class="navbar-brand text-light">日記</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav mr-auto">
                    </ul>
                    @if ("/Auth/ForgotPassword".Equals(ViewContext.RouteData.Values["page"])){
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/">ログインへ戻る</a>
                        </li>
                    </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer theme">
        <div class="container" align="center">
            &copy; 2020 - Diary_Sample</a>
        </div>
    </footer>
    <scrip src="~/lib/jquery/dist/jquery.min.js"></scrip>
    <scrip src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></scrip>
    <scrip src="~/js/site.js" asp-append-version="true"></scrip>
    @RenderSection("Scripts", required: false)
</body>
</html>