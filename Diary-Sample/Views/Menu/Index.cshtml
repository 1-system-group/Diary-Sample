@{
    ViewData["Title"] = "メニュー";
}
@model MenuViewModel
<div class="container">
    <div class="row">
        <div class="col-8">
            <table class="table table-bordered table-hover diary_list">
                <tr class="theme_diary_title">
                    <th class="no">No</th>
                    <th class="title">タイトル</th>
                    <th class="post_date">投稿日</th>
                </tr>
@foreach (DiaryRow item in Model.DiaryList) {
                <tr class="theme_diary_content">
                    <td>@item.No</td>
                    <td><a href="./diary.html">@item.Title</a></td>
                    <td>@item.PostDate</td>
                </tr>
}
            </table>
        </div>
        <div class="col-4">
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <input type="button" id="create" class="btn btn-sm theme" value="新規追加" onclick="window.location.href = './create.html';" />
        </div>
        <div class="col-7">
            <ul class="pagination justify-content-end">
@if(Model.NowPage > 1){
    var prevPage = Model.NowPage - 1;
                <li class="page-item">
                    <a class="page-link text-secondary" asp-area="" asp-controller="Menu" asp-action="Paging" asp-route-page=@prevPage>&lt;&lt;</a>
                </li>
}
@for(int i = 1; i < Model.TotalPageNumber + 1; i++) {
    @if (Model.NowPage == i){
                <li class="page-item"><a class="page-link theme" asp-area="" asp-controller="Menu" asp-action="Paging" asp-route-page=@i>@i</a></li>
    } else {
                <li class="page-item"><a class="page-link text-secondary" asp-area="" asp-controller="Menu" asp-action="Paging" asp-route-page=@i>@i</a></li>
    }
}
@if(Model.NowPage < Model.TotalPageNumber){
    var nextPage = Model.NowPage + 1;
                <li class="page-item">
                    <a class="page-link text-secondary" asp-area="" asp-controller="Menu" asp-action="Paging" asp-route-page=@nextPage>&gt;&gt;</a>
                </li>
}
            </ul>
        </div>
        <div class="col-4">
        </div>
    </div>
</div>
<br/>
<br/>
<!-- toast -->
<div id="message" class="toast" data-delay="3000" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
    <strong class="mr-auto">Notification</strong>
    <small class="text-muted">just now</small>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
    <div class="toast-body">
    登録完了しました。
    </div>
</div>
