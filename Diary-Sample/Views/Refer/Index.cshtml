
@model Diary_Sample.Models.ReferViewModel

@{
   // ViewData["Title"] = "Refer";
}

<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-8">
                <div class="card border-info mb-3">
                    <div class="card-header theme_diary_title">
                        <h5><b>@Model.Title</b></h5>
                        <div align="right">
                            <button id="edit" class="btn btn-sm theme" asp-controller="edit" asp-action="index" asp-route-id="@Model.Id">編集</button>
                        </div>
                    </div>
                    <div class="card-body theme_diary_content">
                        @Model.Content
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
        <div class="row">
            <div class="col-1">
                <button id="back" class="btn btn-sm theme_cancel" asp-controller="Diary" asp-action="index">戻る</button>
            </div>
            <div class="col-11">
            </div>
        </div>
    </div>
    <br />
    <br />
</form>


